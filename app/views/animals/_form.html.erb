<%= form_with(model: animal) do |form| %>
    <div class="mb-3">
      <%= form.text_field :name, class:"form-control", placeholder: "Name"%>
    </div>

    <div class="mb-3">
      <%= form.number_field :age, class:"form-control", placeholder: "Age"%>
    </div>

    <div class="mb-3">
      <%= form.label :born %>
      <%= form.date_field :born, class:"form-control"%>
    </div>

    <div class="mb-3">
      <%= form.textarea :comments, class:"form-control", rows: 3, placeholder: "Comments"%>
    </div>

    <div>
      <%= form.submit class: "btn btn-success"%>
    </div>
<% end %>
