<p style="color: green"><%= notice %></p>

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">
      <%= @animal.name %>
    </h1>
    <h1 class="col-md-8 fs-4">
      <%= @animal.comments %>
    </h1>
  </div>
  <div class="container d-flex align-content-center gap-4">
    <%= link_to "Edit this animal", edit_animal_path(@animal), class:"btn btn-primary"%>
    <%= button_to "Delete this animal", animal_path(@animal), method: :delete, class:"btn btn-danger" %>
    <%= link_to "Back to animals", animals_path, class:"btn btn-secondary" %>
  </div>
</div>
